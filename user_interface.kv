MDScreenManager:
    MDScreen:
        name: 'landing'
        md_bg_color: 1,1,1,1
        MDFloatLayout:
            Image:
                source: "D:/nam/study/New folder/10447398.png"
                size_hint: (0.22,0.22)
                pos_hint: {"center_x": 0.1, "center_y": 0.92}
            MDLabel:
                text: "SHUTTER"
                font_name: 'Roboto'
                bold: True
                pos_hint: {"center_x":0.7 , "center_y": 0.92}
            Image:
                source: "D:/nam/study/New folder/concept-cinema-with-film-elements.png"
                size_hint: (1,1)
                pos_hint: {"center_x": 0.5, "center_y": 0.69}
            MDLabel:
                text: "WELCOME TO SHUTTER!"
                font_name: 'Poppins/Poppins-Bold'
                font_size: '23dp'
                pos_hint: { "center_y": 0.45}
                halign: "center"
                color: 0.13, 0.13, 0.13, 1
            MDLabel:
                text: "An unique image processor app made by 5WAP! Hope you enjoy the best here"
                font_name: 'Poppins/Poppins-Light'
                font_size: '13dp'
                pos_hint: { "center_y": 0.35}
                halign: "center"
                color: 0.5, 0.5, 0.5, 1
            Button:
                text: "LOGIN"
                size_hint: (.56,.065)
                pos_hint: {"center_x":0.5,"center_y":0.25}
                background_color: 0,0,0,0
                on_release:
                    app.root.current = 'login'
                    app.root.transition.direction = "left"
                canvas.before:
                    Color:
                        rgb: 0.63, 0.21, 0.31
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [5]
            Button:
                text: "SIGN UP"
                size_hint: (.56,.065)
                pos_hint: {"center_x":0.5,"center_y":0.15}
                background_color: 0,0,0,0
                color: 0.63, 0.21, 0.31
                on_release: app.root.current = 'register'
                canvas.before:
                    Color:
                        rgb: 0.63, 0.21, 0.31
                    Line:
                        width: 1.2
                        rounded_rectangle: self.x,self.y,self.width,self.height,5,5,5,5,100

    MDScreen:
        name: 'home'
        MDFloatLayout:
            MDBoxLayout:
                orientation: "vertical"
                id: main_box
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDTopAppBar:
                    title: "Menu"
                    specific_text_color: 0.63, 0.21, 0.31, 1
                    md_bg_color: 1,1,1,1
                    elevation: 0
                    anchor_title: "left"
                    font_name: "Poppins-Medium"

                Image:
                    id: img
                    source: ""
                    opacity: 0
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    allow_stretch: True
                    keep_ratio: True

                MDBoxLayout:
                    id: bottom_appbar
                    orientation: "horizontal"
                    size_hint_y: None
                    height: "70dp"
                    md_bg_color: 0.63, 0.21, 0.31, 1

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.25
                        MDIconButton:
                            icon: "arrow-left"
                            theme_icon_color: "Custom"
                            icon_color: 1,1,1,1
                            pos_hint: {"center_x": 0.5, "center_y": 0.7}
                            on_release: app.restore_original()
                        MDLabel:
                            text: "Back"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            font_size: "13sp"
                            font_name: "Poppins/Poppins-Light"
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.25
                        MDIconButton:
                            icon: "home"
                            theme_icon_color: "Custom"
                            icon_color: 1,1,1,1
                            pos_hint: {"center_x": 0.5, "center_y": 0.7}
                        MDLabel:
                            text: "Home"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            font_size: "13sp"
                            font_name: "Poppins/Poppins-Light"
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.25
                        MDIconButton:
                            icon: "upload"
                            theme_icon_color: "Custom"
                            icon_color: 1,1,1,1
                            pos_hint: {"center_x": 0.5, "center_y": 0.7}
                            on_release: app.on_upload_pressed()
                        MDLabel:
                            text: "Upload"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            font_size: "13sp"
                            font_name: "Poppins/Poppins-Light"
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 0.25
                        MDIconButton:
                            id: edit_button
                            icon: "auto-fix"
                            theme_icon_color: "Custom"
                            icon_color: 1,1,1,1
                            pos_hint: {"center_x": 0.5, "center_y": 0.7}
                            on_release: app.toggle_edit_menu()
                        MDLabel:
                            text: "Edit"
                            halign: "center"
                            theme_text_color: "Custom"
                            text_color: 1,1,1,1
                            font_size: "13sp"
                            font_name: "Poppins/Poppins-Light"
                            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            ScrollView:
                id: edit_menu_container
                size_hint: 0.8, 0.3
                pos_hint: {"right": 1, "top": 0.409}
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 6
                scroll_type: ['bars', 'content']
                opacity: 0
                disabled: True

                MDBoxLayout:
                    id: edit_menu
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    padding: "10dp"
                    spacing: "10dp"
                    md_bg_color: 1,1,1,1

                    # Dòng 1: Grayscale
                    MDBoxLayout:
                        size_hint_y: None
                        height: "40dp"
                        spacing: "10dp"

                        MDIconButton:
                            icon: "image-filter-black-white"
                            theme_icon_color: "Custom"
                            icon_color: 0.2, 0.2, 0.2, 1

                        MDRaisedButton:
                            text: "Convert to Gray"
                            on_release: app.apply_edit("grayscale")
                            md_bg_color: 0.63, 0.21, 0.31, 1

                    # Dòng 2: Brightness
                    MDBoxLayout:
                        size_hint_y: None
                        height: "40dp"
                        spacing: "10dp"

                        MDIconButton:
                            icon: "brightness-6"
                            theme_icon_color: "Custom"
                            icon_color: 0.2, 0.2, 0.2, 1

                        MDRaisedButton:
                            text: "Adjust Brightness"
                            md_bg_color: 0.63, 0.21, 0.31, 1
                            on_release:
                                on_release: app.adjust_brightness()

                        Slider:
                            id: edit_slider
                            min: 0
                            max: 100
                            value: 50
                            step: 1
                            size_hint: (0.8, None)
                            opacity: 0
                            disabled: True
                            height: "30dp"
                            pos_hint: {"center_x": 0.5, "y": 0.1}
                            on_value: app.apply_edit("brightness", self.value)
                            thumb_color: 0.63, 0.21, 0.31, 1
                            thumb_color_active: 0.63, 0.21, 0.31, 1
                    # Dòng 3: Crop
                    MDBoxLayout:
                        size_hint_y: None
                        height: "40dp"
                        spacing: "10dp"

                        MDIconButton:
                            icon: "crop"
                            theme_icon_color: "Custom"
                            icon_color: 0.2, 0.2, 0.2, 1

                        MDRaisedButton:
                            text: "Crop Image"
                            md_bg_color: 0.63, 0.21, 0.31, 1
                            on_release: app.apply_edit("crop")

                    # Dòng 4: Rotate
                    MDBoxLayout:
                        size_hint_y: None
                        height: "40dp"
                        spacing: "10dp"

                        MDIconButton:
                            icon: "rotate-right"
                            theme_icon_color: "Custom"
                            icon_color: 0.2, 0.2, 0.2, 1

                        MDRaisedButton:
                            text: "Rotate Image"
                            md_bg_color: 0.63, 0.21, 0.31, 1
                            on_release: app.apply_edit("rotate")


                    # Dòng 5: contrast
                    MDBoxLayout:
                        size_hint_y: None
                        height: "40dp"
                        spacing: "10dp"

                        MDIconButton:
                            icon: "contrast-circle"
                            theme_icon_color: "Custom"
                            icon_color: 0.2, 0.2, 0.2, 1

                        MDRaisedButton:
                            text: "Adjust contrast"
                            md_bg_color: 0.63, 0.21, 0.31, 1
                            on_release: app.adjust_contrast()
                        Slider:
                            id: edit_slider_ct
                            min: 0
                            max: 100
                            value: 50
                            step: 1
                            size_hint: (0.8, None)
                            opacity: 0
                            disabled: True
                            height: "30dp"
                            pos_hint: {"center_x": 0.5, "y": 0.1}
                            on_value: app.apply_edit("contrast", self.value)

                    # Dòng 6: Split RGB
                    MDBoxLayout:
                        size_hint_y: None
                        height: "40dp"
                        spacing: "10dp"

                        MDIconButton:
                            icon: "set-none"
                            theme_icon_color: "Custom"
                            icon_color: 0.2, 0.2, 0.2, 1

                        MDRaisedButton:
                            text: "Split RGB"
                            md_bg_color: 0.63, 0.21, 0.31, 1
                            on_release: app.apply_edit("split")

                    # Dòng 7: Face Detection
                    MDBoxLayout:
                        size_hint_y: None
                        height: "40dp"
                        spacing: "10dp"

                        MDIconButton:
                            icon: "face-recognition"  # icon phù hợp có sẵn trong MaterialDesignIcons
                            theme_icon_color: "Custom"
                            icon_color: 0.2, 0.2, 0.2, 1

                        MDRaisedButton:
                            text: "Detect Faces"
                            md_bg_color: 0.63, 0.21, 0.31, 1
                            on_release: app.apply_edit("detect_faces")

    MDScreen
        name: 'register'
        MDFloatLayout:
            MDIconButton:
                icon: "arrow-left"
                pos_hint:{"center_y":0.95}
                on_release:
                    app.root.transition.direction = "right"
                    app.root.current = 'landing'
            Image:
                source: "D:/nam/study/New folder/10447398.png"
                size_hint: 0.25, 0.25
                pos_hint: {"center_x":0.5,"center_y":0.9}

            MDLabel:
                text:"Sign Up For Free."
                font_name: "Poppins/Poppins-Bold"
                font_size: "25dp"
                pos_hint:{"center_y":0.8}
                halign: "center"
                color: 0.13, 0.13, 0.13, 1
            MDLabel:
                text: "Thank you for chosing us."
                font_name:"Poppins/Poppins-Light"
                font_size: "15sp"
                color: 0.5, 0.5, 0.5, 1
                halign: "center"
                pos_hint:{"center_y":0.72}

            MDTextField:
                id: username_register
                size_hint: 0.8, 0.1
                pos_hint: {"center_x": 0.5, "center_y": 0.6}

                multiline: False
                mode: "rectangle"  # Sử dụng mode round hợp lệ
                hint_text: "Username"
                hint_text_color_focus: 0.63, 0.21, 0.31, 1
                hint_text_color_normal:0.5, 0.5, 0.5, 1
                font_name: "Poppins/Poppins-medium"
                cursor_color: 0, 0, 0.23, 1
                cursor_width: "2dp"
                line_color_normal:0.5, 0.5, 0.5, 1
                line_color_focus: 0.63, 0.21, 0.31, 1
                text_color_focus: 0, 0, 0.23, 1
                icon_right: "account-circle"
                icon_right_color_normal: 0.5, 0.5, 0.5, 1
                icon_right_color_focus: 0.63, 0.21, 0.31, 1

            MDTextField:
                id: pass_register
                password: True
                size_hint: 0.8, 0.1
                pos_hint: {"center_x": 0.5, "center_y": 0.45}

                multiline: False
                mode: "rectangle"  # Sử dụng mode round hợp lệ
                hint_text: "Password"
                hint_text_color_focus: 0.63, 0.21, 0.31, 1
                hint_text_color_normal:0.5, 0.5, 0.5, 1
                font_name: "Poppins/Poppins-medium"
                cursor_color: 0, 0, 0.23, 1
                cursor_width: "2dp"
                line_color_normal:0.5, 0.5, 0.5, 1
                line_color_focus: 0.63, 0.21, 0.31, 1
                text_color_focus: 0, 0, 0.23, 1
                icon_right: "lock"
                icon_right_color_normal: 0.5, 0.5, 0.5, 1
                icon_right_color_focus: 0.63, 0.21, 0.31, 1

            Button:
                text: "Create Account"
                size_hint: (.8,.065)
                pos_hint: {"center_x":0.5,"center_y":0.25}
                background_color: 0,0,0,0
                on_release:
                    app.root.current = 'login'
                    app.root.transition.direction = "left"
                canvas.before:
                    Color:
                        rgb: 0.63, 0.21, 0.31
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [5]

    MDScreen:
        name: "login"
